{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "pretty": true,
        "sourceMap": true,
        "target": "es2018",
        "outDir": "dist",
        "baseUrl": "./src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "declaration": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "resolveJsonModule": true,
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "@core/*": ["core/*"],
            "@utils/*": ["utils/*"],
            "@follow/*": ["follow/*"],
            "@message/*": ["message/*"],
            "@publication/*": ["publication/*"],
            "@user/*": ["user/*"]
        },
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["src/generators", "node_modules", "dist", ".vscode"],
    "include": ["src"]
}
